<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/map_detail_thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/map_thumb_placeholder"
            android:adjustViewBounds="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map_detail_thumb"
            android:background="#50000000">

            <ImageButton
                android:id="@+id/map_detail_zoom_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_full_screen" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/map_detail_thumb"
            android:id="@+id/map_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            android:orientation="vertical">

        </LinearLayout>

    </RelativeLayout>

</ScrollView>

