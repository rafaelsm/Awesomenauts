<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/skill_solar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/solar"
        android:text="135"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/skill_name_textview"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:paddingRight="@dimen/small_padding"/>

    <ImageView
        android:id="@+id/skill_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/placeholder_skill"
        android:layout_centerVertical="true"
        android:padding="@dimen/small_padding"/>

    <TextView
        style="@style/card.header_simple_title"
        android:id="@+id/skill_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" First Skill Name"
        android:layout_toRightOf="@id/skill_image"
        android:layout_alignTop="@id/skill_image"
        android:layout_marginTop="@dimen/small_padding"
        />

    <TextView
        style="@style/CardSubText"
        android:id="@+id/skill_desc_textview"
        android:text=" First Skill Description"
        android:layout_toRightOf="@id/skill_image"
        android:layout_below="@id/skill_name_textview"
        android:layout_alignLeft="@id/skill_name_textview"
        />

</RelativeLayout>